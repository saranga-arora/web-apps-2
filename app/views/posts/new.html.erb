<h1>New Post</h1>

<%= form_with model: @post do |form| %>
  <p>
    <%= form.label "Author" %>
    <%= form.text_field "author" %>
  </p>
  <p>
    <%= form.label "Caption" %>
    <%= form.text_field "body" %>
  </p>
  <p>
    <%= form.label "Image" %>
    <%= form.text_field "image" %>
  </p>
  <%= form.submit %>
<% end %>